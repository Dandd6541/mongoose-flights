<%- include('../partials/header') %>

<section id="show-page">
    <div>Airlines: </div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNo %></div>
    <div>Departing: </div>
    <div><%= flight.departs %></div>
    <div>Departs: </div>
    <div><%= flight.departs ? 'Yes' : 'Nope' %></div>
  </section>

<br><br><h2>Destinations</h2>

<form id="add-review-form" method="POST"
  action="/destinations/<%= flight._id %>">
  <label>Airport:</label>
  <!-- <select name="rating"> -->
    <select name="airport">
        <option value="LAX" selected>LAX</option>
        <option value="DEN">DEN</option>
        <option value="BWI">BWI</option>
        <option value="SAN">SAN</option>
      </select>
  <label>Airline:</label>
   <select name="airline">
      <option value="Delta">Delta</option>
      <option value="United">United</option>
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
    </select>
    <label>Flight Number:</label>
        <input type="Number" name="flightNo">
       <!-- <br>  -->
    <label>Arrivals:</label>
      <input type="datetime-local" name="arrival">
      <a href="/tickets/new"></a>
      <!-- <br> -->

 
     <!-- <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5" selected>5</option>  -->
  </select>
  <input type="submit" value="Destination">
</form>

<% if (flight.destinations.length) { %>
    <table>
      <thead>
        <tr>
          <th>Airline</th>
          <th>Airport</th>
          <th>FlightNo</th>
          <th>Arrivals</th>
        </tr>
      </thead>
      <tbody>
        <% flight.destinations.forEach(function(f) { %>
          <tr>
            <td><%= f.airline %></td>
            <td><%= f.airport %></td>
            <td><%= f.flightNo %></td>
            <td><%= f.arrival %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Destinations Yet</h5>
  <% } %>
  <h1>Purchase a Ticket</h1>
    <button> <a href= "/flights/<%= flight._id %>/tickets/new">Buy A Ticket</button>
      <table>
        <tbody>
          <thead>
            <th>Seat</th>
            <th>Price</th>
          </thead>
          <% tickets.forEach(function(t) { %>
            <tr>
              <td><%= t.seat %></td>
              <td><%= t.price %></td>
            </tr>
            <% }) %>
        </tbody>
        </table>
<%- include('../partials/footer') %>
